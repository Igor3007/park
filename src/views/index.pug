block variables



block header
  .header 
    .header-top
      .header-top__menu
        .hamburger
          i 
          i 
          i
        span Меню
      .header-top__logo
        a(href='#'): img(src="/img/svg/logo.svg")
      .header-top__phone
        .header-top-phone
          .header-top-phone__title Группа продаж
          .header-top-phone__online Сейчас работаем
      .header-top__msgr
        ul
          li: a(href='#'): +icons('#ic_call')
          li: a(href='#'): +icons('#ic_wa')
          li: a(href='#'): +icons('#ic_tg')
